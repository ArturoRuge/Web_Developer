        meta(name="description" content=description)
        link(rel="stylesheet" href="https://cdn.rawgit.com/escueladigital/EDgrid/23dc0bfe/css/ed-grid.min.css")
        link(rel="stylesheet" href="css/styles-dist.css")
    body
        header.main-header
            .logo-container
                a(href="/")
