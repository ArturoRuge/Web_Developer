extends templates/_template

append config
    -currentPage = "cursos-page"
    -title = "Mis cursos"

block header
    include block/_header

block nav
    include block/_nav

block main

    -n = 3
    while n--
        .course-card
            img(src="img/course-poster.jpg").course-card__img
            a(href="#").icon-star
            footer.course-card__footer
                .course-card__progress
                    .course-card__progress__bar
                    .course-card__progress__label 56% completado
                .course-card__professor Alvaro Javier